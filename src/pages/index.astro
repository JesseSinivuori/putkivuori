---
import { AboutUs } from "@/pages/_sections/about-us";
import { Reviews } from "@/pages/_sections/reviews/reviews";
import { ContactForm } from "@/pages/_sections/contact-form";
import { ContactInfo } from "@/pages/_sections/contact-info";
import RootLayout from "./_root-layout.astro";
import { Hero } from "./_sections/hero/hero";
import { Services } from "./_sections/services";
import { Pricing } from "./_sections/pricing/pricing";
import PageLayout from "./_page-layout.astro";
import { Image } from "astro:assets";
import heroImage from "@/publichero-image.avif";
---

<RootLayout>
  <Hero>
    <Image
      src={heroImage}
      alt="Työkaluja puisella pöydällä."
      loading="eager"
      sizes={`(max-width: 320px) 320px, (max-width: 640px) 640px, (max-width: 1280px) 1280px, ${heroImage.width}px`}
      format="avif"
      class="object-cover object-left absolute w-full h-full"
    />
  </Hero>
  <PageLayout>
    <AboutUs />
    <Services />
    <Pricing />
    <Reviews />
    <ContactForm client:idle />
    <ContactInfo />
  </PageLayout>
</RootLayout>
